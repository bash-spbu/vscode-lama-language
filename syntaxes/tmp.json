{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Lama",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#constants"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-dash.lama",
					"match": "--.*$"
				},
				{
					"name": "comment.line.block.lama",
					"begin": "\\(\\*",
					"end": "\\*\\)"
				}
			]
		},
		"constants": {
			"patterns": [
				{
					"name": "constant.numeric.lama",
					"match": "-?[0-9]+"
				},
				{
					"name": "constant.character.lama",
					"match": "'([ˆ']|''|\n|\t)'"
				},
				{
					"name": "constant.language.lama",
					"match": "\\b(true|false))\\b"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.lama",
					"match": "\\b(after|at|before|boxed|case|do|elif|else|esac|eta|fi|for|fun|if|import|infix|infixl|infixr|lazy|length|local|od|of|public|repeat|return|sexp|skip|string|then|unboxed|until|when|while)\\b"
				},
				{
					"name": "keyword.operator.lama",
					"match": "\\b(:=|:|!!|&&|==|!=|<=|<|>=|>|\\+|−|\\∗|/|%)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.lama",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.lama",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.lama"
}