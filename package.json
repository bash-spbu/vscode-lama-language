{
    "name": "lama-language",
    "displayName": "Lama language",
    "description": "Syntax highlighting for the Lama language",
    "repository": {
        "type": "git",
        "url": "https://github.com/bash-spbu/vscode-lama-language.git"
    },
    "galleryBanner": {
        "color": "#00C800",
        "theme": "light"
    },
    "version": "0.2.0",
    "engines": {
        "vscode": "^1.30.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "icon": "images/icon.png",
    "contributes": {
        "languages": [
            {
                "id": "lama",
                "aliases": [
                    "Lama",
                    "lama"
                ],
                "extensions": [
                    ".lama"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lama",
                "scopeName": "source.lama",
                "path": "./syntaxes/lama.tmLanguage.json"
            }
        ]
    }
}